void selectionsort (int x[], int n)
{
     int i, index, j, l;
     for (i=n ; i>0; i--)
     {
           l=x[1];
           i=1;
           for(j=1; j<=i; j++)
           {
                if(x[j] > l)
                {
                      l = x[j];
                      index = j;
                }
           }
           x[index] = x[i];
           x[i]=l;
     }
}
